@model CodeAsignment.Models.HomeModel

<html>
<head>
    <title>App Form</title>
</head>
<body>
    <form method="post">
        <fieldset>
            <legend>Administer Apps</legend>
            <div>
                <label for="Name">App name:</label>
                <input type="text" name="name" value="" />
            </div>
            <div>
                <label for="WebOrigin">Web Address (use this: https://onesignal.com)</label>
                <input type="text" name="chrome_web_origin" value="" />
            </div>
            <div>
                <label for="Apns">Existing App Id (for update only, choose one from view apps JSON)</label>
                <input type="text" name="appID" value="" />
            </div>
            <div>
                <label>&nbsp;</label>
                <input type="submit" name="response" value="View Apps" formaction=@Url.Action("ViewApps") formmethod="post" class="btn btn-primary" />
                <input type="submit" name="response" value="Create App" formaction=@Url.Action("CreateApp") formmethod="post" class="btn btn-primary" />
                <input type="submit" name="response" value="Update App" formaction=@Url.Action("UpdateApp") formmethod="post" class="btn btn-primary" />
            </div>
            <div>
                @if (!string.IsNullOrEmpty(Model.apiResponsMessage))
                {
                    @Html.Raw(Model.apiResponsMessage)
                }
            </div>
        </fieldset>
    </form>
</body>
</html>
